<html lang="en">
<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>
            <div class="notes content">
                <% if(notes.length>0){ %>
                    <%notes.forEach((note)=>{ %>
                        <a class="single" href="/notes/<%= note._id %>">
                            <h3>
                                <%=note.title%>
                            </h3>
                            <p>
                                <%=note.body%>
                            </p>
                        </a>

                        <%})%>
                            <%} else{%>
                                <p>There is no notes to display...</p>
                                <%}%>
            </div>


            <%- include('./partials/footer.ejs') %>
    </body>

</html>